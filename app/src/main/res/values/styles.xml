<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontQuestion" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontAnswer" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSolution" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="QuestionLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
  </style>

    <style name="SeparatorLineLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">#616161</item>
    </style>

    <style name="QuestionElements">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuestionButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
